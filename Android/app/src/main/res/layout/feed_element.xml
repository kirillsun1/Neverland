<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/feed_user_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_row="0"
                    android:layout_rowWeight="0"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feed_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/feed_quest_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </GridLayout>


            <ImageView
                android:id="@+id/feed_proof_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <TextView
                android:id="@+id/feed_proof_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/feed_rating_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="That's it!"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:id="@+id/feed_rating_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It's fake!"
                    android:theme="@style/PrimaryFlatButton" />

                <ProgressBar
                    android:id="@+id/feed_rating_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:progress="79"
                    android:progressDrawable="@drawable/feed_progress"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
